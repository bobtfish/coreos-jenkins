[Unit]
Description=Jenkins data storage volume
After=docker.service
Requires=docker.service,pullcontainers.service

[Service]
Type=oneshot
TimeoutStartSec=0
ExecStartPre=/usr/bin/docker pull bobtfish/docker-jenkins-volume
ExecStart=/usr/bin/docker run --name jenkins_volume -t bobtfish/docker-jenkins-volume /bin/true

