#cloud-config

users:
  - name: tdoran
    sudo: true
    coreos-ssh-import-github: bobtfish

coreos:
  etcd:
      #generate a new token for each unique cluster from https://discovery.etcd.io/new
      https://discovery.etcd.io/e5d0d43551c4f74ffe8130ab005da111
      addr: $public_ipv4:4001
      peer-addr: $public_ipv4:7001
  units:
    - name: etcd.service
      command: start
    - name: fleet.service
      command: start
      runtime: no
      content: |
        [Unit]
        Description=fleet

        [Service]
        Environment=FLEET_PUBLIC_IP=$public_ipv4
        ExecStart=/usr/bin/fleet
    - name: docker-tcp.socket
      command: start
      enable: true
      content: |
        [Unit]
        Description=Docker Socket for the API

        [Socket]
        ListenStream=4243
        Service=docker.service
        BindIPv6Only=both

        [Install]
        WantedBy=sockets.target
    - name: pullcontainers.service
      command: start
      runtime: no
      content: |
        [Unit]
        Description=pullcontainers

        [Service]
        Type=oneshot
        ExecStart=/bin/bash -c 'for i in $(echo ubuntu anichols/jenkins thefactory/zookeeper-exhibitor redjack/mesos-master redjack/mesos-slave bobtfish/synapse-etcd-amb bobtfish/nerve-etcd); do /usr/bin/docker pull $i; done; docker run --rm -v /usr/local/bin:/target jpetazzo/nsenter; docker run --rm jpetazzo/nsenter cat /docker-enter > /usr/local/bin/docker-enter;chmod 755 /usr/local/bin/docker-enter'
    - name: synapse-jenkins.service
      command: start
      enable: true
      content: |
        [Unit]
        Description=Synapse exposing Jenkins
        After=docker.service
        Requires=docker.service

        [Service]
        TimeoutStartSec=600
        ExecStartPre=/usr/bin/docker pull bobtfish/synapse-etcd-amb
        ExecStart=/bin/bash -c "HOST_IP=$(/bin/ifconfig enp0s8 | awk '/inet /{print $2}') && exec /usr/bin/docker run --rm --name jenkins_synapse -e SYNAPSE_APP=jenkins -e SYNAPSE_PORT=8000 -e ETCD_PORT_4001_TCP_ADDR=$HOST_IP -e ETCD_PORT_4001_TCP_PORT=4001 -p 80:8000 bobtfish/synapse-etcd-amb"
        ExecStop=/usr/bin/docker kill jenkins_synapse
        ExecStopPost=/usr/bin/docker rm jenkins_synapse
    - name: docker-api.service
      command: start
      enable: true
      content: |
        Description=Exposes the Docker API on port 4242
        After=docker.service
        Requires=docker.service

        [Service]
        TimeoutStartSec=600
        ExecStartPre=/usr/bin/docker pull bobtfish/synapse-etcd-amb
        ExecStart=/usr/bin/docker run --rm --name docker_api -p 4242:4242 -v /var/run/docker.sock:/var/run/docker.sock bobtfish/docker-socket-http-proxy
        ExecStop=/usr/bin/docker kill docker_api
        ExecStopPost=/usr/bin/docker rm docker_api

